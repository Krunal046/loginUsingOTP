<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddAddressActivity">

    <EditText
        android:id="@+id/et_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/custom_edit_text"
        android:hint="Enter Your Address "
        android:inputType="phone"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_200sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_pin_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/custom_edit_text"
        android:hint="Enter Your Pin Code "
        android:inputType="phone"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@+id/et_address"
        app:layout_constraintStart_toStartOf="@+id/et_address"
        app:layout_constraintTop_toBottomOf="@+id/et_address" />

    <EditText
        android:id="@+id/et_address_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/custom_edit_text"
        android:hint="Enter Your Address Type "
        android:inputType="phone"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@+id/et_pin_code"
        app:layout_constraintStart_toStartOf="@+id/et_pin_code"
        app:layout_constraintTop_toBottomOf="@+id/et_pin_code" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="Submit "
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="@+id/et_address_type"
        app:layout_constraintStart_toStartOf="@+id/et_address_type"
        app:layout_constraintTop_toBottomOf="@+id/et_address_type" />

</androidx.constraintlayout.widget.ConstraintLayout>
